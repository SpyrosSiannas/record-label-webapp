<div style="height:55px">

</div>
<div id="signin-modal" class="modal">
   <div id="signin" class="modal-content">
       <div class="inner">
            <div class="modal-title">
                <h1>CoffeeStained <br> Records </h1>
            </div>
            <div class="main-content">
                {{#if (is_defined authError)}}
                    {{#if authError}}
                        <div class="error-message"><p class="inner">Invalid Credentials!</p></div>
                    {{/if}}
                {{/if}}
                <div class="links">
                    <a class="active">Log in</a>
                    <a onclick="closeLoginModal();openSignupModal()">Sign up</a>
                </div>
                <form name="loginform" action="/auth" method="POST">
                    <div class="text-inputs">
                        <input placeholder="yourmail@example.com" name="email" id="mail" type="email" required><br>
                        <input placeholder="password" id="pwd" name="password" type="password" required><br>
                    </div>
                    <input value="Login" class="submit" id="signin-submit" type="submit">
                </form>
                <p class="bottom-modal-text">Don't have an account yet? <a onclick="closeLoginModal();openSignupModal()">Sign-up</a></p>
            </div>
        </div>
   </div> 
</div>
<div id="signup-modal" class="modal">
    <div id="signup" class="modal-content">
        <div class="inner">
            <div class="modal-title">
                <h1>CoffeeStained <br> Records </h1>
            </div>
            <div class="main-content">
                {{#if (is_defined regError)}}
                    {{#if regError}}
                        <div class="error-message"><p class="inner">This e-mail is already in use!</p></div>
                    {{/if}}
                {{/if}}
                <div class="links">
                    <a onclick="closeSignupModal(); openLoginModal()">Log in</a>
                    <a class="active">Sign up</a>
                </div>
                <p class="paragraph">Sign up to enjoy exclusive releases, special offers, and to be the first to hear about new records and signings</p>
                <form method="POST" action="/register">
                    <div class="text-inputs">
                        <input placeholder="First Name*" name="fname" id="signup-first-name" type="text" required><br>
                        <input placeholder="Last Name*" name="lname" id="signup-last-name" type="text" required><br>
                        <input placeholder="E-mail*" name="email" id="signup-e-mail" type="email" required><br>
                        <input placeholder="Password*" name="password" id="signup-pwd" type="password" required><br>
                    </div>
                    <input value="Create Account" class="submit" id="signup-submit" type="submit">
                </form>
                <p class="bottom-modal-text">Already have an account? <a onclick="closeSignupModal(); openLoginModal()">Sign-in</a></p>
            </div>
        </div>
    </div>
</div>
